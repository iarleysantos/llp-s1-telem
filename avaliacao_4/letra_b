#include <stdio.h>
#include <math.h>

int main() {
    int numero;

    // Lendo o número inteiro
    printf("Digite um número inteiro: ");
    scanf("%d", &numero);

    if (numero < 0) {
        printf("Número inválido\n");
    } else {
        double logaritmo = log10(numero);
        printf("O logaritmo de %d é %.2f\n", numero, logaritmo);
    }

    return 0;
}
